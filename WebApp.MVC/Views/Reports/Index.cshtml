@{
    ViewBag.Title = "List of Reports";
}

<h1>Report's List</h1>

<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Click To Access Report</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td><a asp-controller="Reports" asp-action="TopAgent">Get Top Agents</a></td>
                <td><p>Returns top three agents by number of missions completed</p></td>
            </tr>
            <tr>
                <td><a asp-controller="Reports" asp-action="Pensions">Get Pension Lists </a></td>
                <td><p>Return agent information for only retired agents</p></td>
            </tr>
            <tr>
                <td><a asp-controller="Reports" asp-action="ClearanceId">Get Audit Clearances</a></td>
                <td><p>Return agent information given a security clearance value and agency id</p></td>
            </tr>
              
        </tbody>
    </table>
</div>


